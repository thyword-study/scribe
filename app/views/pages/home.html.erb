<% content_for :title do %>
  <%= "Engage with Scripture | #{Settings.app.name.external}" %>
<% end %>

<% content_for :description do %>
  <%= Settings.app.introduction %>
<% end %>

<main>
  <div class="relative isolate px-6 pt-24 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <div class="flex justify-center items-center">
        <%= image_tag "icon.png", alt: "Thy Word Icon", class: "w-36 h-auto" %>
      </div>

      <div class="text-center">
        <h2 class="mt-8 text-4xl font-semibold tracking-tight text-balance text-gray-900">Engage with Scripture</h2>

        <p class="mt-4 text-xl font-medium text-pretty text-gray-500">
          And let Godâ€™s Word shine light on your every step
        </p>

        <div class="mt-4 relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="bg-white px-2 text-gray-500">
              <svg class="size-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
              </svg>
            </span>
          </div>
        </div>


        <p class="mt-4 text-xl font-medium text-pretty text-gray-500">
          Read the Bible seamlessly or go deeper with verse-by-verse commentary for clearer understanding
        </p>
        <div class="mt-8 flex items-center justify-center gap-x-4">
          <%= link_to  translation_path(code: @translation.code.downcase), class: "rounded-md bg-blue-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500" do %>  
            <%= "Read the #{@translation.code} Bible" %>
          <% end %>

          <%= link_to commentary_books_path, class: "rounded-md bg-blue-50 px-3.5 py-2.5 text-sm font-semibold text-blue-600 shadow-xs hover:bg-indigo-100 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-50" do %>  
            Study with Commentary
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
